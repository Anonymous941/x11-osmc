<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.x11-launcher" name="X11 Launcher" version="0.0.3" provider-name="Zjoasan">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language/>
        <platform>linux</platform>
        <disclaimer>For OSMC</disclaimer>
        <summary lang="en">Launch X11 from Kodi.</summary>
        <description lang="en">Launches X11 from Kodi. It starts a shellscipt-series that close Kodi and start X11.</description>
        <website>https://github.com/zjoasan/</website>
        <email>joakim.s@webbkontakt.net</email>
    </extension>
    <assets>
        <icon>resources/medis/icon.png</icon>
        <fanart>resources/media/fanart.jpg</fanart>
    </assets>
</addon>
